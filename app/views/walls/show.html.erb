<%= stylesheet_link_tag "application" %>
<%= flash[:notice] %>
<h1><%=@user.email%></h1>

<%= form_for :post, url: '/walls', method: :post do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message %>

  <%= form.submit "Post" %>
<% end %>

<% @posts.each do |post| %>
  <p><%= post.message %> by <%= post.user.email %> </p>
  <%= button_to "Delete", { 
    :controller => :posts,
    :action => 'destroy', 
    :id => post.id 
    }, :method => :delete %>
<% end %>

<%= button_to "Log out", destroy_user_session_path, method: :delete  %>
